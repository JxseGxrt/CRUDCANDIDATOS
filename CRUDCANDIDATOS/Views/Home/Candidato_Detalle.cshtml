@model CRUDCANDIDATOS.Models.ViewModels.CandidateVM
@{
    ViewData["Title"] = "Candidato_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.Candidate.IDCandidate == 0){
    <h1>Crear Candidato</h1>
}
else
{
    <h1>Editar Candidato</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Candidato_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="Candidate.IDCandidate" />
            <div cite="mb-2">
                <label class="form-label" asp-for="Candidate.Name">Nombre</label>
                <input class="form-control form-control-sm" asp-for="Candidate.Name" type="text" />
            </div>
            <div cite="mb-2">
                <label class="form-label" asp-for="Candidate.Surname">Apellidos</label>
                <input class="form-control form-control-sm" asp-for="Candidate.Surname" type="text" />
            </div>
            <div cite="mb-2">
                <label class="form-label" asp-for="Candidate.Birthdate">Fecha de Nacimiento</label>
                <input class="form-control form-control-sm" asp-for="Candidate.Birthdate" type="date" />
            </div>
            <div cite="mb-2">
                <label class="form-label" asp-for="Candidate.Email">Correo</label>
                <input class="form-control form-control-sm" asp-for="Candidate.Email" type="text" />
            </div>
            <hr />
            <div class="card">
                <div class="card-header">
                    <h5>Experiencia del Candidato</h5>
                </div>
                <div class="card-body">
                    <a class="btn btn-success btn-sm" asp-action="Experiencia_Detalle" asp-controller="Home" asp-route-idCandidatoEx="@Model.Candidate.IDCandidate">Añadir</a>
                    <hr />
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Compañia</th>
                                <th>Puesto</th>
                                <th>Descripcion</th>
                                <th>Salairo</th>
                                <th>Desde</th>
                                <th>Hasta</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Candidate.Experience != null)
                            {
                                @foreach (var item in Model.Candidate.Experience)
                                {
                                    <tr>
                                        <td>@item.Company</td>
                                        <td>@item.Job</td>
                                        <td>@item.Descripcion</td>
                                        <td>@item.Salary</td>
                                        <td>@item.BeginDate</td>
                                        <td>@item.EndDate</td>
                                        <td>
                                            <a class="btn btn-primary btn-sm" asp-action="Experiencia_Detalle" asp-controller="Home" asp-route-idCandidatoEx="@item.IDCandidateExperience">Editar</a>
                                            <a class="btn btn-danger btn-sm" asp-action="EliminarExperiencia" asp-controller="Home" asp-route-idCandidatoEx="@item.IDCandidateExperience">Elinar</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div cite="mb-2">
                  @if(Model.Candidate.IDCandidate == 0)
                  {
                       <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                    }
                    else
                    {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                         
                    }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
                <hr />
            </div>
        </form>
    </div>
</div>
